<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFC_App.View.LoginPage"
             Title="LoginPage"
             xmlns:viewmodel="clr-namespace:NFC_App.ViewModel"
             x:DataType="viewmodel:LoginViewModel">
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Label Text="login" HorizontalOptions="Center"/>
        <Entry BackgroundColor="Blue"
                   HorizontalOptions="Center"
                   WidthRequest="200"
                   TextColor="White"/>
        <Label Text="pass" HorizontalOptions="Center"/>
        <Entry BackgroundColor="Blue"
                   HorizontalOptions="Center"
                   WidthRequest="200"
                   TextColor="White"/>
        <Button WidthRequest="200" BackgroundColor="Red" HeightRequest="40"
                    Text="Login" TextColor="Black" Command="{Binding LoginUserCommand}"/>
    </VerticalStackLayout>
</ContentPage>